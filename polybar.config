[colors]
;; Active Colors
bg = #000000 ; Back in Black
semi-trans-black = #aa000000
fg = #f8f8f2
fg-alt = #9C9C9C
foreground-alt = #224F22
trans = #00000000
white = #FFFFFF
black = #000000
red = #FF0000
pink = #d81b60
purple = #7932a8
deep-purple = #7932A8
indigo = #3949ab
blue = #1e88e5
light-blue = #039be5
midnight = #5B0BF1
cyan = #00acc1
teal = #00897b
green = #224F22
light-green = #00CC00
lime = #c0ca33
yellow = #fdd835
amber = #ffb300
orange = #fb8c00
deep-orange = #f4511e
brown = #6d4c41
gray = #757575
light-gray = #E5E5E5
dark-gray = #404040
blue-gray = #546e7a

; Show Monitor Status
actmon = #7932A8
secmon = #224F22
urgentmon = #e53935

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 0

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 0

[bar/mainbar0]
inherit = bar/barbase
modules-left = activity sep ewmh sep layout0 sep xwindow

[bar/mainbar1]
inherit = bar/barbase
modules-left = activity sep ewmh sep layout1 sep xwindow

; System Tray
wm-restack = i3
tray-position = right
tray-detached = true
tray-maxsize = 16
tray-offset-x = -460
tray-offset-y = 0
tray-padding = 5
tray-scale = 1.0
tray-background = ${colors.semi-trans-black}

[bar/barbase]
width = ${env:width}
monitor = ${env:monitor}
offset-x = 8
offset-y = 0
height = 20

fixed-center = true
bottom = false

background = ${colors.bg}
foreground = ${colors.fg}

radius-top = 10.0
radius-bottom = 10.0

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

; This creates the Polybar outline
border-size = 2
border-color = ${colors.midnight}

font-0 = "Arial:size=12:weight=bold;3"
font-1 = "SymbolsNerdFont-Regular:size=12;3"

modules-center = sep date sep weather sep
modules-right =  sep cpu spc cpu_temp sep memory sep intel-arc-gpu sep filesystem sep sysmenu

enable-ipc = true
[settings]
screenchange-reload = true
;; throttle-output = 5
;; throttle-output-for = 10

;; Modules
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/activity]
type = custom/script
exec = echo "%{F#00CC00} %{F#f8f8f2}Apps "
interval = 1

format-prefix = ""
format = <label>
format-foreground = ${colors.fg}


click-left = rofi -no-config -no-lazy-grab -show drun -theme $HOME/.config/leftwm/themes/current/rofi/launcher.rasi
click-right = rofi -no-config -no-lazy-grab -show drun -theme $HOME/.config/leftwm/themes/current/rofi/launcher.rasi

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/sep]
type = custom/text
content = "│"
content-foreground = ${colors.midnight}
content-background = ${colors.bg}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/spc]
type = custom/text
content = " "
content-foreground = ${colors.fg}
content-background = ${colors.bg}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/ewmh]
type = internal/xworkspaces

pin-workspaces = false
group-by-monitor = true
enable-click = true
enable-scroll = true
reverse-scroll = true
format = <label-state>
label-monitor = %name%

label-active = %name%
label-active-foreground = ${colors.fg}
label-active-background = ${colors.actmon}
label-active-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.amber}
label-occupied-background = ${colors.secmon}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.yellow}
label-urgent-background = ${colors.urgentmon}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.blue-gray}
label-empty-background = ${colors.bg}
label-empty-padding = 1

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/layout0]
type = custom/script
tail = true
interval = 1
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.light-green}
exec = ~/.config/polybar/layout0.sh

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/layout1]
type = custom/script
tail = true
interval = 1
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.light-green}
exec = ~/.config/polybar/layout1.sh

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/xwindow]
type = internal/xwindow
tail = true
label-foreground = ${colors.fg}
label = %{A1:xdotool windowactivate %pid%:}%{A3:pkill -RTMIN+10 polybar:}%{A4:pkill -USR1 polybar:}%title:0:50%%{A}%{A}%{A}
label-commands = echo "%output%" | recode UTF-8..UTF-8//IGNORE

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date
interval = 1
date = " %a, %b %d, %l:%M %p "
format = <label>
format-foreground = ${colors.black}
format-background = ${colors.white}
label = "%{A1:gnome-calendar:}%date%%{A}"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/weather]
type = custom/script
exec = ~/Shell_Scripts/weather-plugin.sh
tail = true
interval = 900
format-background = ${colors.black}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Default: 80
; New in version 3.6.0
warn-percentage = 95

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
; format = <label> <ramp-coreload>
format = <label>

; Format used when average CPU load (same as %percentage%) reaches warn-percentage
; If not defined, format is used instead.
; Available tags:
;   <label-warn>
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
; New in version 3.6.0
; format-warn = <label-warn>

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label =  %percentage%%

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
; New in version 3.6.0
label-warn =  %percentage%%

; Spacing (number of spaces, pixels, points) between individual per-core ramps
; ramp-coreload-spacing = 1
; ramp-coreload-0 = ▁
; ramp-coreload-1 = ▂
; ramp-coreload-2 = ▃
; ramp-coreload-3 = ▄
; ramp-coreload-4 = ▅
; ramp-coreload-5 = ▆
; ramp-coreload-6 = ▇
; ramp-coreload-7 = █

label-background = ${colors.bg}
label-foreground = ${colors.fg}

label-warn-background = ${colors.red}
label-warn-foreground = ${colors.fg}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/cpu_temp]
type = custom/script
interval = 3
exec = ~/Shell_Scripts/cpu_temp.sh
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/memory]
type = custom/script
interval = 3
exec = ~/Shell_Scripts/memory.sh
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/intel-arc-gpu]
type = custom/script
interval = 1
exec = ~/Shell_Scripts/intel-arc-gpu.sh
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /home

; Seconds to sleep between updates
; Default: 30
interval = 30

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing (number of spaces, pixels, points) between entries
; Default: 2
spacing = 1

; Default: 90
; New in version 3.6.0
warn-percentage = 70

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <label-mounted>

; Available tags:
;   <label-unmounted> (default)
format-unmounted = <label-unmounted>

; Format used when mountpoint %percentage_used% reaches warn-percentage
; If not defined, format-mounted is used instead.
; Available tags:
;   <label-warn>
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
; New in version 3.6.0
; format-warn = <label-warn>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %mountpoint%:%percentage_used%%%{F-}
label-mounted-background = ${colors.bg}
label-mounted-foreground = ${colors.fg}

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = #55

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
; New in version 3.6.0
label-warn = %mountpoint%:%percentage_used%%%{F-} WARNING
label-warn-background = ${colors.red}
label-warn-foreground = ${colors.fg}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/sysmenu]
type = custom/script
exec = echo "%{F#ff0000} ⏻"
interval = 1
format = <label>
format-foreground = ${colors.fg}
click-left = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh
click-right = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
